    }

    .footer-button {
        width: 100%;
    }

    .button-link {
        flex: 1;
        margin: 0 0.25rem;
    }

    /* Menu closing overlay */
    .menu-closeonclick-placeholder {
        display: none;
    }


    #sidebar.auto-expanded .menu-closeonclick-placeholder {
        display: block;
    }

    }

    /* Auto expanded sidebar */
    #sidebar {
        width: 250px;
        height: 100%;
        transition: width 0.3s ease;
        overflow: hidden;
    }

  

    #sidebar.auto-expanded {
        width: 250px;
        position: absolute;
        z-index: 101;
        height: 100%;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
